{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "pages/*": ["pages/*"],
      "components/*": ["components/*"],
      "styles/*": ["styles/*"],
      "mocks/*": ["mocks/*"],
      "hooks/*": ["hooks/*"]
    }
  },
  "include": ["src"],
  "compileOnSave": false
}
